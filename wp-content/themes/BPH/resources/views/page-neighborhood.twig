{% extends "base.twig" %} {% block content %}



<section class="container justify-center">
  <div class="md:flex-row flex-col flex single-building-card no-wrap">
    <div class="md:w-5/12 sm:w-full p-3 lg:p-6 image-container">
      <img
        class="min-w-full"
        alt="{{ post.post_title }} Boston"
        src="{{ featured_image }}"
      />
    </div>
    <div class="md:w-7/12 sm:w-full lg:pt-16 px-3 lg:px-0">
      <h1 class="text-left text-primary text-6xl">{{ post.post_title }}</h1>
      <hr class="lg:hidden mb-6">
      <div class="text-2xl text-primary">{{post.sub_title}}</div>
      <hr class="mt-6 lg:hidden">
    </div>
  </div>

  <div class="flex flex-col mb-8 w-full px-3 lg:px-6 py-4 wysiwyg">
    <div class="mt-3">
      {{ post.post_content }}
    </div>
  </div>

  <hr class="mb-1">
  <h3 class="py-1 mb-1 text-3xl text-center text-primary">More Information</h3>
  <hr class="mb-3">
  <div id="neighborhood_form" class="flex justify-center">
    <div class="form-container w-full mb-12">
      <p class="mb-3 text-primary">
        For more information on all available listings, or future listings
        coming to the market, please inquire here:
      </p>

      {% filter shortcodes %} [wpforms id="89" title="false"] {% endfilter %}
    </div>
  </div>
</section>

{% endblock %}
