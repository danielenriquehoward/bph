{% extends "base.twig" %} {% block content %}

<section class="container flex justify-center single-article-container">
  <div class="flex flex-col  mb-8 max-w-3xl py-4">
    <h1 class="text-center text-4xl mb-2">{{ post.post_title }}</h1>
    <p class="text-center date">
      {{ date_posted }} by
      <a class="underline text-black" href="/bio">Jon Kumin</a>
    </p>
    <div class="mt-3">
      {{ post.post_content }}
    </div>
  </div>
</section>

{% endblock %}
