{% extends "base.twig" %} {% block content %}

<section class="container">
  <div>
    <div>
      <!-- for image -->
    </div>
    <div>
      <h3>Jon Kumin</h3>
      <p>{{ acf.title }}</p>
    </div>
    <div>
      <div>
        <p>{{ acf.phone_number }}</p>
        <p>{{ acf.email }}</p>
        <p>{{ acf.company_profile }}</p>
      </div>
      <div>
        <p>{{ acf.company }}</p>
        <img alt="company logo" src="{{ acf.company_logo.url }}" />
      </div>
    </div>
  </div>

  <div>
    <!-- col -->
    <div>
      <p>{{ acf.bio }}</p>
    </div>
    <div>
      <h3>Awards</h3>
      {% for award in acf.awards %}
      <div>
        <div>icon</div>
        <div>
          <div>{{ award.award_title }}</div>
          <div>{{ award.award_description }}</div>
        </div>
      </div>

      {% endfor %}
    </div>

    <!-- testimonial col -->
    <div>
        {% filter shortcodes %}
            [wpforms id="89" title="false"]
        {% endfilter %}
      <div>
        <h3>Testimonials</h3>
        <div>
          {% for testimonial in acf.testimonials %}
          <div>
            <p>{{ testimonial.testimonial_text }}</p>
            <div>{{ testimonial.name }} ({{ testimonial.neighborhood }})</div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

{% endblock %}
